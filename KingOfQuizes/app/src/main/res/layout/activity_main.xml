<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearName"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="3dp">

        <ImageView
            android:id="@+id/FAB2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/prof" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:clickable="false"
            android:fontFamily="@font/alata"
            android:text="Moeein"
            android:textColor="@color/hardBlue"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/FAB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/notif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alata"
        android:text="Explore our treaser\nquiz and challenge\nyourself now!"
        android:textColor="@color/blackblue"
        android:textSize="36sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:clickable="false"
        android:clipToOutline="false"
        android:fontFamily="@font/alata"
        android:text="Recommended"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:clickable="false"
        android:clipToOutline="false"
        android:fontFamily="@font/alata"
        android:text="@string/underlined_text"
        android:textColor="@color/hardBlue"
        android:textSize="16sp"
        android:textStyle="bold" />


    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommended"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/lightBlue"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/quizlogotext1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="J"
                android:textColor="@color/lightBlue"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/recom1_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/quizlogotext1"
                android:fontFamily="@font/alata"
                android:text="Java Quiz"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/recom1_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/alata"
                android:text="Hard!!!"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/lightBlue"

        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp">

            <TextView
                android:id="@+id/quizlogotext2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="P"
                android:textColor="@color/lightBlue"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/recom2_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/quizlogotext2"
                android:fontFamily="@font/alata"
                android:text="Python Quiz"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/recom2_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/alata"
                android:text="Easy!"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recom3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/lightBlue"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/quizlogotext3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="K"
                android:textColor="@color/lightBlue"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/recom3_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/quizlogotext3"
                android:fontFamily="@font/alata"
                android:text="Kotlin Quiz"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/recom3_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/alata"
                android:text="Easy!"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recom4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recom3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/lightBlue"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/quizlogotext4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="K"
                android:textColor="@color/lightBlue"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/recom4_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/quizlogotext4"
                android:fontFamily="@font/alata"
                android:text="Kotlin Quiz"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/recom4_subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/alata"
                android:text="Easy!"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/lightBlue"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/blackblue"
        app:itemTextColor="@color/blackblue"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>